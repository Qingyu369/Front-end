utton class=\"buy-button\" @click=\"addToCart(game)\">加入购物车</button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <router-view></router-view>\r\n    <div v-if=\"currentGame\" class=\"game-description\">\r\n      <h3>{{ currentGame.title }}</h3>\r\n      <p>{{ currentGame.description }}</p>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'HomePage',\r\n  data() {\r\n    /**\r\n     * @typedef {Object} Game\r\n     * @property {string} title - 游戏标题\r\n     * @property {string} type - 游戏类型\r\n     * @property {string} image - 游戏图片路径\r\n     * @property {number} originalPrice - 原价\r\n     * @property {number} discountPrice - 折后价\r\n     * @property {number} discount - 折扣百分比\r\n     * @property {string} description - 游戏描述\r\n     */\r\n\r\n    /** @type {Game[]} */\r\n    const games = [\r\n      { \r\n        title: 'Grand Theft Auto V', \r\n        type: '开放世界、动作、多人', \r\n        image: require('@/assets/gta5.jpg') ,\r\n        originalPrice: 179, \r\n        discountPrice: 65.4, \r\n        discount: 63,\r\n        description: '这是一款充满刺激的动作冒险游戏，适合喜欢探险和战斗的玩家。'\r\n      },\r\n      { \r\n        title: '米塔MiSide', \r\n        type: '心理恐怖、第一人称', \r\n        image: require('@/assets/MiSide.jpg'), \r\n        originalPrice: 52, \r\n        discountPrice: 52, \r\n        discount: 0,\r\n        description: '你一定在各种游戏里有喜欢的女孩，如果你真的和她在一起了呢？'\r\n      },\r\n      { \r\n        title: '游戏3', \r\n        type: '射击', \r\n        image: 'path/to/game3-image.jpg', \r\n        originalPrice: 75, \r\n        discountPrice: 60, \r\n        discount: 20,\r\n        description: '这是一款紧张刺激的射击游戏，玩家需要精准射击击败敌人。'\r\n      },\r\n      // 添加更多游戏...\r\n    ];\r\n\r\n    /** @type {Game | null} */\r\n    let currentGame = null;\r\n\r\n    return {\r\n      games,\r\n      currentGame\r\n    };\r\n  },\r\n  methods: {\r\n    /**\r\n     * 显示游戏描述\r\n     * @param {Game} game - 游戏对象\r\n     */\r\n    showDescription(game) {\r\n   